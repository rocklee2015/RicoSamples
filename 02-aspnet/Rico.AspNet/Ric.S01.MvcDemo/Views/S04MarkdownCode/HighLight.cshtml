
@{
    ViewBag.Title = "HighLight";
}
<h2>Markdown 代码高亮</h2>
<div class="btn-group">
    <button id="btnHighLightJs" type="button" class="btn btn-default">HighLightJs</button>
    <button id="btnsyntaxhighlighter" type="button" class="btn btn-default">syntaxhighlighter</button>
    <button type="button" class="btn btn-default">按钮 3</button>
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        效果
    </div>
    <div class="panel-body">
        <ul id="myTab" class="nav nav-tabs">
            <li><a href="#strapdown" data-toggle="tab">strapdown</a></li>
            <li><a href="#marked" data-toggle="marked">marked</a></li>
            <li><a href="#mdjs" data-toggle="tab">mdjs</a></li>
            <li><a href="#hyperDown" data-toggle="tab">hyperDown</a></li>
        </ul>
        <div id="myTabContent" class="tab-content">
            <div class="tab-pane fade in active" id="strapdown">
                <h3>strapdown效果</h3>
                <div id="strapdownDemo">

                </div>
            </div>
            <div class="tab-pane fade" id="marked">
                <h3>marked效果</h3>
                <div id="markedDemo">

                </div>
            </div>
            <div class="tab-pane fade" id="mdjs">
                <h3>mdjs效果</h3>
                <div id="mdjsDemo">

                </div>
            </div>
            <div class="tab-pane fade" id="hyperDown">
                <h3>hyperDown效果</h3>
                <div id="hyperDownDemo">

                </div>
            </div>
        </div>
    </div>
</div>

